


<div class="row">
  <% if @faketweet.errors.any? %>
    <div class="error_explanation">
      <ul>
        <% @faketweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @faketweet, local: true) do |form| %>
    <div class="tweet">
      <%= form.text_area :content, rows: 5,
      class: "col-xs-offset-1 col-xs-10" %>
    </div>
    <p><%= link_to "一覧に戻る", faketweets_path, class: 'btn btn-success' %>
    <%= form.submit "更新する",
            data: { confirm: "更新しますか？"},
            class: "btn btn-default" %></p>
  <% end %>
</div>
